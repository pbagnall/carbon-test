{
  "name": "carbon-test",
  "version": "0.1.0",
  "description": "A test if IBM Carbon",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "run-p build:*",
    "build:wc": "npm run build --workspace=web-components-test",
    "build:react": "npm run build --workspace=react-test",

    "demo": "npm run build && npm run demo-serve",
    "demo-serve": "run-p demo:*",
    "demo:compare": "http-server -c-1 -o index.html",
    "demo:wc": "npm run demo --workspace=web-components-test",
    "demo:react": "npm run demo --workspace=react-test",

    "dev": "run-p dev:*",
    "dev:compare": "http-server -c-1 -o dev.html",
    "dev:wc": "npm run dev --workspace=web-components-test",
    "dev:react": "npm run dev --workspace=react-test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pbagnall/carbon-test.git"
  },
  "author": "Peter Bagnall",
  "license": "UNLICENCED",
  "bugs": {
    "url": "https://github.com/pbagnall/carbon-test/issues"
  },
  "homepage": "https://github.com/pbagnall/carbon-test#readme",
  "workspaces": [
    "web-components-test",
    "react-test",
    "angular-test"
  ],
  "dependencies": {
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5"
  }
}
