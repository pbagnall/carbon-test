{
  "name": "carbon-test",
  "version": "0.1.0",
  "description": "A test if IBM Carbon",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "run-p build:*",
    "build:wc": "npm run build --workspace=web-components-test",
    "build:react": "npm run build --workspace=react-test",
    "build:angular": "npm run build --workspace=angular-test",

    "demo": "npm run build && npm run demo-serve",
    "demo-serve": "http-server -c-1 -o index.html",

    "gh-pages:prepare": "node scripts/gh-pages-prepare.js",
    "gh-pages:clean": "node scripts/gh-pages-clean.js",
    "gh-pages:copy": "node scripts/gh-pages-copy.js", 
    "gh-pages:fix-paths": "node scripts/gh-pages-fix-paths.js",
    "publish": "npm run build && npm run gh-pages:prepare && echo 'Files prepared in gh-pages/ directory. Push to main branch to deploy to GitHub Pages.'",
    "pages:local": "http-server gh-pages -c-1 -o index.html",

    "dev": "run-p dev:*",
    "dev:compare": "http-server -c-1 -o index.html",
    "dev:wc": "npm run dev --workspace=web-components-test",
    "dev:react": "npm run dev --workspace=react-test",
    "dev:angular": "npm run dev --workspace=angular-test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pbagnall/carbon-test.git"
  },
  "author": "Peter Bagnall",
  "license": "UNLICENCED",
  "bugs": {
    "url": "https://github.com/pbagnall/carbon-test/issues"
  },
  "homepage": "https://pbagnall.github.io/carbon-test/",
  "workspaces": [
    "web-components-test",
    "react-test",
    "angular-test"
  ],
  "dependencies": {
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5"
  }
}
